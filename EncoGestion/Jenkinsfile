pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = 'my-docker-registry'
        DOCKER_CREDENTIALS_ID = 'docker-credentials-id'
        KUBERNETES_NAMESPACE = 'my-kubernetes-namespace'
        SPRING_DATASOURCE_URL = 'jdbc:postgresql://dpg-cpue6ruehbks73efid30-a.oregon-postgres.render.com:5432/encogestion_db'
        SPRING_DATASOURCE_USERNAME = 'encogestion_db_user'
        SPRING_DATASOURCE_PASSWORD = 'ZhXJ51Id3XodaGiBiZGbDP3AQVlUVnHq'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('EncoGestion') {
                    script {
                        if (isUnix()) {
                            sh 'mvn clean package -DskipTests'
                        } else {
                            bat 'mvn clean package -DskipTests'
                        }
                    }
                }
            }
        }

        stage('Test') {
            steps {
                dir('EncoGestion') {
                    script {
                        if (isUnix()) {
                            sh 'mvn test'
                        } else {
                            bat 'mvn test'
                        }
                    }
                }
            }
            post {
                always {
                    junit 'EncoGestion/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('EncoGestion') {
                    script {
                        dockerImage = docker.build("${env.DOCKER_REGISTRY}/my-api-app:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', env.DOCKER_CREDENTIALS_ID) {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir('EncoGestion') {
                    script {
                        sh "kubectl --namespace=${env.KUBERNETES_NAMESPACE} apply -f k8s/deployment.yaml"
                        sh "kubectl --namespace=${env.KUBERNETES_NAMESPACE} set image deployment/my-api-app my-api-app=${env.DOCKER_REGISTRY}/my-api-app:${env.BUILD_NUMBER}"
                    }
                }
            }
        }
    }
}
